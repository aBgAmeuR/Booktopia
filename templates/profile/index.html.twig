{% extends 'base.html.twig' %}

{% block body %}
	<twig:Header is_logged_in="{{ app.user ? '1' : '0' }}" :searchdto="searchDto"></twig:Header>
	<section class="mx-auto px-4 w-full max-w-xl my-8">
		<h1 class="text-2xl font-bold text-center">Profile</h1>
		{{ form_start(form, {'attr': {'class': 'flex flex-col gap-2'}}) }}
		{{ form_errors(form) }}
		{{ form_row(form.name) }}
		{{ form_row(form.email) }}
		{{ form_row(form.currentPassword) }}
		{{ form_row(form.newPassword) }}
		{{ form_row(form.confirmPassword) }}
		<div class='flex gap-2'>
			{{ form_row(form.save) }}
			<a href="{{ path('app_logout') }}" class="mt-1 inline-block shrink-0 rounded-md border border-primary bg-blue-500 px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-primary focus:outline-none focus:ring active:text-primary">Logout</a>
		</div>
		{{ form_end(form) }}
	</section>
{% endblock %}
