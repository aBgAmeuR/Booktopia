{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!
{% endblock %}

{% block body %}
	<twig:Header is_logged_in="0" :searchdto="searchDto"></twig:Header>

	<main class="w-full max-w-[960px] my-5 mx-auto p-4">
		<div class="flex items-center justify-center flex-col gap-8 rounded-base w-full h-80 bg-[url('/images/home_main_bg.png')] bg-center bg-cover">
			<h1 class="text-3xl font-extrabold text-white text-center z-20 px-2">Découvrez votre prochain livre préféré</h1>
			<twig:HomePageSearch :searchDto="searchDto" class="z-20"></twig:HomePageSearch>
		</div>

		<h2 class="font-bold text-lg text-primary mt-5 mb-2">Catégories</h2>
		<div class="grid grid-cols-5 gap-4">
			{% for category in categories %}
				<div class="rounded-base p-4 text-base font-bold border border-border">
					{{ category.categorie }}
				</div>
			{% endfor %}
		</div>

		<h2 class="font-bold text-lg text-primary mt-5 mb-2">Livres phares</h2>
		<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
			{% for product in featuredProducts %}
				<article class="h-full">
					<a href="/product/{{ product.id }}" class="block space-y-3 p-4 rounded-base hover:bg-secondary h-full">
						<div class="h-60 w-full flex justify-center items-center overflow-hidden rounded-base">
							<img src="{{ product.image }}" alt="image product" class="w-full rounded-base">
						</div>
						<main>
							<h2 class="text-primary text-base line-clamp-3">{{ product.titre }}</h2>
							<div class="text-secondary text-sm">{{ product.auteur }}</div>
							<div class="text-secondary text-sm">{{ product.prix }}€</div>
						</main>
					</a>
				</article>
			{% endfor %}
		</div>

	</main>
{% endblock %}
